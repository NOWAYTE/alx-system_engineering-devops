#!/usr/bin/env bash
# This script contains the content of the file /etc/passwd using the while loop + IFS

while IFS=: read -r _ USERNAME _ _ GROUP _ HOME _ COMMAND _ USER _ PASSWORD _ INFO _; do
    echo "The user $USERNAME is part of the $GROUP gang, lives in $HOME and rides $COMMAND. $USER place is protected by the passcode $PASSWORD, more info about the user here: $INFO"
done < /etc/passwd
